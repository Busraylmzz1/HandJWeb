@model IEnumerable<HandJWebApp.Models.Model.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    <a href="/Customer/Create/" class="btn btn-default">Yeni Müşteri Ekle</a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LogoURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img src="@item.LogoURL" width="150" height="50" />
        </td>
        <td>
            @Html.ActionLink("Güncelle", "Edit", new { id=item.CustomerId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.CustomerId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.CustomerId })
        </td>
    </tr>
}

</table>
