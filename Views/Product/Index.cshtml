@model IEnumerable<HandJWebApp.Models.Model.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script type="text/javascript">
    $(document).ready(function () {
        $('#myTable').DataTable(

            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
                }
            }
        );
    });

</script>
<h2>Ürün Kayıtları</h2>

<a class="btn btn-default" href="/Product/Create/">Yeni Ürün Ekle</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>ResimURL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Title</td>
                <td>@item.Category.CategoryName</td>
                <td><img src="@item.ImageURL" width="100" height="100" /></td>
                <td><a href="/Product/Edit/@item.ProductId">Güncelle</a> | <a href="/Blog/Delete/@item.ProductId">Sil</a></td>
            </tr>
        }


    </tbody>
</table>