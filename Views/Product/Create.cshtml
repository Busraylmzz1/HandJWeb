@model HandJWebApp.Models.Model.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ürün Kayıt Ekle</h2>

<script type="text/javascript">
    CKEDITOR.replace('editor')

</script>



<div class="form">
    @*<form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Product/Create/" enctype="multipart/form-data">*@
    @using (Html.BeginForm("Create", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        @Html.AntiForgeryToken()
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Title" name="Title" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Kategori <span class="required">*</span></label>
            <div class="col-lg-10">
                @Html.DropDownList("CategoryId", null, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">İcerik <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea class="ckeditor" name="Content"></textarea>
            </div>
        </div>
        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input required type="file" class="form-control " name="ImageURL" accept=".jpg,.png.jpeg" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <button class="btn btn-primary" type="submit">Ekle</button>
                <button class="btn btn-default" type="button"><a href="/Product/Index/">İptal</a></button>
            </div>
        </div>

    }

    @*</form>*@
</div>