@model IEnumerable<HandJWebApp.Models.Model.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Hizmetler</h2>
<a class="btn btn-default" href="/Service/Create/">Yeni Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Resim URL</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@Html.Raw(item.Explanition)</td>
            <td><img width="100" height="100" src="@item.ImageURL" /></td>
            <td><a href="/Service/Edit/@item.ServiceId">Düzenle</a> | <a href=/Service/Delete/@item.ServiceId >Sil</a> </td>
        </tr>
        }
    </tbody>

</table>
