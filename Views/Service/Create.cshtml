
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    CKEDITOR.replace('editor')

</script>

<h2>Hizmet Ekle</h2>

<div class="form">
    <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Service/Create" enctype="multipart/form-data">
        <div class="form-group ">
            <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
            <div class="col-lg-10">
                <input class="form-control" id="Title" name="Title" minlength="5" type="text" required />
            </div>
        </div>
        <div class="form-group ">
            <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
            <div class="col-lg-10">
                <textarea name="Explanation" required class="ckeditor"></textarea>
            </div>
        </div>

        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2"> Önceki Resim</label>
            <div class="col-lg-10">
                <img src="@Model.ImageURL" height="150" width="150" />
            </div>
        </div>



        <div class="form-group ">
            <label for="curl" class="control-label col-lg-2">Resim</label>
            <div class="col-lg-10">
                <input required type="file" class="form-control" name="ImageURL" accept=".jpg,.png,.jpeg" />
            </div>
        </div>

            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                    <button class="btn btn-default" type="button"><a href="/Service/Index">İptal</a></button>
                </div>
            </div>

    </form>
</div>



